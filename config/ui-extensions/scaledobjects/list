- name: Target
  source: $join([spec.scaleTargetRef.name, ' (', spec.scaleTargetRef.kind, ')'])
- name: Triggers
  source: spec.triggers[].type
  widget: JoinedArray
- name: Replicas
  source: $join([$string(spec.minReplicaCount), '..', $string(spec.maxReplicaCount)])
- name: Ready  
  source: status.conditions[0].status
  description: status.conditions[0].message
  widget: Badge
  highlights:
    positive:
      - 'True'
    negative:
      - 'False' 
